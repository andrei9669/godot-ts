{
  "include": ["."],
  "exclude": ["lib.dom.d.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "rootDir": ".",
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "decorators": ["./src/decorators.bundle"]
    }
  }
}
